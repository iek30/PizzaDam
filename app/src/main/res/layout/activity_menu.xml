<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pizza_dam"
    tools:context=".MenuActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:rowCount="4">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="7dp"
            android:background="@drawable/custom_border"
            android:backgroundTint="#C69C27B0"
            android:onClick="comenzarPedido"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/fondo_boton_comenzar_pedido" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="7dp"
            android:background="@drawable/custom_border"
            android:backgroundTint="#C69C27B0"
            android:onClick="ajustes"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:srcCompat="@drawable/fondo_boton_ajustes" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="7dp"
            android:background="@drawable/custom_border"
            android:backgroundTint="#C69C27B0"
            android:onClick="abrirWeb"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/fondo_boton_pedido" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="7dp"
            android:background="@drawable/custom_border"
            android:backgroundTint="#C69C27B0"
            android:onClick="volver"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/fondo_boton_salir" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
